{
  "tabWidth": 2,
  "printWidth": 80,
  "semi": false,
  "singleQuote": true,
  "arrowParens": "always",
  "trailingComma": "all",
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "plugins": ["prettier-plugin-solidity"],
        "parser": "solidity-parse",
        "explicitTypes": "always"
      }
    }
  ]
}
